<mvc:View controllerName="com.logali.final.controller.CrearEmpleado"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <NavContainer id="wizzardNavContainer">

        <pages>

            <Page id="wizzardContentPage" 
                  title="{i18n>pageTitle}" 
                  titleAlignment="Center">

                <content>

                    <Wizard id="createEmployeeWizard">

                        <WizardStep id="EmployeeTypeStep1"
                                    title="{i18n>employeeTypeTitle}">

                            <core:Fragment id="step1Fragment"
                                           fragmentName="com.logali.final.fragment.Step1"
                                           type="XML"/>

                        </WizardStep>

                        <WizardStep id="EmployeeDataStep2"
                                    title="{i18n>employeeDataTitle}">

                            <core:Fragment id="step2Fragment"
                                           fragmentName="com.logali.final.fragment.Step2"
                                           type="XML"/>

                        </WizardStep>

                        <WizardStep id="AdditionalInfoStep3"
                                    title="{i18n>additionalInfoTitle}">
                                
                            <core:Fragment id="step3Fragment"
                                           fragmentName="com.logali.final.fragment.Step3"
                                           type="XML"/>

                        </WizardStep>

                    </Wizard>

                </content>

                <footer>
                    <OverflowToolbar>
                        <ToolbarSpacer/>
                        <Button text="Cancel" press="handleWizardCancel"/>
                    </OverflowToolbar>
				</footer>

            </Page>

        </pages>

    </NavContainer>

</mvc:View>