<mvc:View
	controllerName="com.logali.final.controller.Container"
    xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">

    <f:FlexibleColumnLayout id="container"
                            layout="TwoColumnsMidExpanded">

        <f:beginColumnPages>
			<mvc:XMLView id="master"
						viewName="com.logali.final.view.ViewEmployees"
						type="XML"/>
		</f:beginColumnPages>

        <f:midColumnPages>
			<mvc:XMLView
						id="details"
						viewName="com.logali.final.view.Details"
						type="XML"/>
		</f:midColumnPages>
    
    
    </f:FlexibleColumnLayout>


</mvc:View>